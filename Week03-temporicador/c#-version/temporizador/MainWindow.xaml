<Window x:Class="temporizador.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:temporizador"
    mc:Ignorable="d"
    Title="Temporizador" Height="350" Width="450" MinHeight="300" MinWidth="400">
    <Grid Margin="16">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Título -->
    <TextBlock Grid.Row="0" Text="Temporizador" 
           FontSize="20" FontWeight="SemiBold" 
           HorizontalAlignment="Center" Margin="0,0,0,8"/>

    <!-- Visual del tiempo -->
    <Border Grid.Row="1" CornerRadius="8" Background="#FFF5F5F5" Padding="12" Margin="0,0,0,12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="TimeText" Text="00:00" 
               FontSize="56" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,6"/>
        <ProgressBar Name="Progress" Width="320" Height="14" Minimum="0" Maximum="1" Value="0" Margin="0,12,0,0"/>
        </StackPanel>
    </Border>

    <!-- Duración (segundos) -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6">
        <TextBlock Text="Duración (s):" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <TextBox Name="DurationTextBox" Text="60" Width="60" HorizontalContentAlignment="Center" />
        <Slider Name="DurationSlider" Width="180" Minimum="1" Maximum="3600" Value="60" Margin="12,0,0,0" />
    </StackPanel>

    <!-- Botones -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" >
        <Button Name="StartButton" Content="Iniciar" Width="90" Margin="6,0"/>
        <Button Name="PauseButton" Content="Pausar" Width="90" Margin="6,0"/>
        <Button Name="ResetButton" Content="Reiniciar" Width="90" Margin="6,0"/>
    </StackPanel>

    <StackPanel Margin="16">
      <TextBlock x:Name="StatusText" Text="Listo" Margin="0,0,0,8"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="8">
        <Button x:Name="StartButton" Click="StartButton_Click">Iniciar</Button>
        <Button x:Name="StopButton" Click="StopButton_Click">Detener</Button>
      </StackPanel>
    </StackPanel>
    </Grid>
</Window>
